/* pages/list/list.wxss */
.list-con{
  width: 690rpx;
  height: 130rpx;
  margin: 0 auto;
  border-bottom: 1px solid #e4e4e4;
  padding-bottom: 30rpx;
  padding-top: 30rpx;
  position: relative;
}
.list-con:nth-child(3n) {
  /* border-bottom: none; */
}
.list-con image{
  width: 160rpx;
  height: 120rpx;
  border-radius: 5px;
  float: left;
  margin-right: 10px;
}
.list-con view{
  margin-bottom: 10rpx;
 
}
.list-con view:nth-child(2) {
  font-size: 14px;
  color: #292929;
}
.list-con view:nth-child(3) {
  font-size: 11px;
  color: #878787;
}
.list-con view:nth-child(4) {
  font-size: 11px;
  color: #878787;
}
.price{
  float: right;
  color: #ff5c5c;
  font-size: 14px;
  font-weight: bolder;
}

