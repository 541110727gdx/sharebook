/* pages/give/give.wxss */
page{
  background: #f5f5f5;
}
.give{
  width: 100%;
  background: #fff;
}
.give-tab{
  width: 100%;
  height: 100rpx;
  border-bottom: 1px solid #e4e4e4;
}
.give-tab view{
  width: 50%;
  height: 100%;
  line-height: 100rpx;
  color: #6f6f6f;
  font-size: 14px;
  float: left;
  text-align: center;
}
.text-act{
  display: inline-block;
  color: #63cc59;
  border-bottom: 1px solid #63cc59;
}
.yigou{
  width: 100%;
  background: #fff;
  border-top: 1px solid #e4e4e4;
}
.yigou-con{
  width: 690rpx;
  height: 170rpx;
  margin: 0 auto;
  padding: 30rpx 0;
  position: relative;
}
.yigou-con image{
  width: 160rpx;
  height: 120rpx;
  border-radius: 5px;
  float: left;
  margin-right: 20rpx;
}
.yigou-con view:nth-child(2){
  color: #292929;
  font-size: 14px;
  margin-bottom: 10rpx;
}
.yigou-con view:nth-child(3),.yigou-con view:nth-child(4){
  color: #878787;
  font-size: 12px;
}
.yigou-con view:nth-child(3){
  margin-bottom: 10rpx;
}
.yigou-con view:nth-child(5){
  color: #878787;
  font-size: 12px;
  margin-top: 20rpx;
}
.dai{
  position: absolute;
  right: 0;
  top: 50%;
  color: #50b047;
  font-size: 14px;
  margin-top: -7px;
}
.yiling{
  color: #4e4e4e;
  position: absolute;
  right: 0;
  top: 50%;
  font-size: 14px;
  margin-top: -7px;
}






















