<!--pages/give/give.wxml-->
<view class='give'>
  <view class='give-tab'>
    <view bindtap='giveTab'><text class="{{select?'text-act':''}}">未赠送</text></view>
    <view bindtap='giveTab2'><text class="{{select2?'text-act':''}}">已赠送</text></view>
  </view>
</view>
<scroll-view hidden='{{!select}}'>
<block wx:for="{{arr}}" wx:key="yigou">
  <view class='yigou'>
    <view class='yigou-con'>
      <image src='../../img/banner.png'></image>
      <view>{{item.title}}</view>
      <view>{{item.dec}}</view>
      <view>已更新<text>9</text>期 | <text>34</text>人购买</view>
      <view>购买于<text>2015-03-30</text>\t<text>12:50</text></view>
      <button class='dai' open-type='share'>赠送</button>
      <!-- <view class="dai">待领取</view> -->
    </view>
  </view>
</block>
</scroll-view>
<scroll-view hidden='{{!select2}}'>
<block wx:for="{{arr}}" wx:key="yigou">
  <view class='yigou'>
    <view class='yigou-con'>
      <image src='../../img/banner.png'></image>
      <view>{{item.title}}</view>
      <view>{{item.dec}}</view>
      <view>已更新<text>9</text>期 | <text>34</text>人购买</view>
      <view>购买于<text>2015-03-30</text>\t<text>12:50</text></view>
      <view class="yiling">已领取</view>
    </view>
  </view>
</block>
</scroll-view>



