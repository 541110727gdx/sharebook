/* pages/choose/choose.wxss */
page{
  background: #f1f1f1;
}
.youhui{
  width: 100%;
  height: 200rpx;
}
.youhui-main{
  width: 690rpx;
  height: 100%;
  margin: 20rpx auto 0;
  background: #fff;
  position: relative;
}
 radio{
  position: absolute;
  right: 20rpx;
  top: 50%;
  margin-top: -27rpx;
} 
.youhui-con{
  width: 35%;
  height: 100rpx;
  margin: 0 auto;
  float: left;
  line-height: 20px;
  margin-top: 50rpx;
}
.you-name{
  display: inline-block;
  width: 100%;
  color: #4f493a;
  font-size: 16px;
  text-align: center;
}
.you-time{
  display: block;
  width: 100%;
  color: #4f493a;
  font-size: 10px;
  text-align: center;
}
.li{
  width: 45%;
  height: 100rpx;
  margin: 0 auto;
  float: left;
  line-height: 20px;
  margin-top: 50rpx;
}
.li view{
  display: block;
  width: 100%;
  color: #000;
  font-size: 14px;
  text-align: center;
}
.li view:nth-child(1) {
  color: #ff3d27;
  font-size: 22px;
  font-weight: bolder;
}
.li view:nth-child(2) {
  color: #ff3d27;
  font-size: 14px;
}
.ling{
  width: 120rpx;
  height: 80rpx;
  float: right;
  font-size: 14px;
  line-height: 40px;
  background: pink;
  text-align: center;
  margin-top: 8rpx;
}
label{
  display: block;
  width: 100%;
  height: 200rpx;
}
.bu{
  line-height: 100rpx;
}


