/* pages/yigou/yigou.wxss */
page{
  background: #f5f5f5;
}
.yigou{
  width: 100%;
  background: #fff;
  border-top: 1px solid #e4e4e4;
}
.yigou-con{
  width: 690rpx;
  height: 130rpx;
  margin: 0 auto;
  padding: 30rpx 0;
}
.yigou-con image{
  width: 160rpx;
  height: 120rpx;
  border-radius: 5px;
  float: left;
  margin-right: 20rpx;
}
.yigou-con view:nth-child(2){
  color: #292929;
  font-size: 14px;
  margin-bottom: 10rpx;
}
.yigou-con view:nth-child(3),.yigou-con view:nth-child(4){
  color: #878787;
  font-size: 12px;
}
.yigou-con view:nth-child(3){
  margin-bottom: 10rpx;
}
.yigou-con view:nth-child(5){
  color: #878787;
  font-size: 12px;
  margin-top: 20rpx;
}

